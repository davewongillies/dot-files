[user]
    name = David Gillies
    signingkey = 21499650C3010361395A406EFFE50B78D42FD949

[commit]
    gpgsign = false

[core]
    editor = vim

[alias]
    logs = log --topo-order --stat
    ; ediff = !git diff $1 | eyaml decrypt --stdin
    ediff = "!f() { git diff HEAD~1 \"$1\"|eyaml decrypt --stdin; }; f"

[push]
    default = current

[merge]
    tool = meld

[diff]
    tool = meld

[difftool]
    prompt = false

[branch "master"]
    remote = origin
    merge = refs/heads/master

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showbranch = auto
    status = auto
    ui = auto

[log]
    decorate = auto
    showSignature = false

[gpg]
	program = gpg2
