[colors]
background = #002b36
background-alt = #586e75

foreground = #dfdfdf
foreground-alt = #555

primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/default]
width = 100%
height = 27
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0

font-0 = FantasqueSansMonoNerdFont:size=12:antialias=false;1
font-1 = FontAwesome:size=12;2
font-2 = FantasqueSansMonoNerdFont:size=12:antialias=false;1

module-margin-left = 1
module-margin-right = 1

modules-left = my-text i3
modules-center = xwindow
modules-right = volume memory filesystem loadavg temperature weather battery date

tray-position = right
tray-padding = 2
tray-transparent = false
tray-detached = false
wm-restack = i3
override-redirect = false
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

